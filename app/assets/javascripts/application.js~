$(document).ready(function() {
  $('a[rel*=lazybox]').lazybox({close: false, modal: false, opacity: 0.5, fixed: true, klass: 'lazybox', speed: 200});

function Midway(){var e=$(".midway-horizontal"),t=$(".midway-vertical");e.each(function(){$(this).css("marginLeft",-$(this).outerWidth()/2)});t.each(function(){$(this).css("marginTop",-$(this).outerHeight()/2)});e.css({left:"50%"});t.css({top:"50%"})}$(window).on("load",Midway);$(window).on("resize",Midway)
});



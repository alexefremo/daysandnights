<h1><%= current_user.profile_name %> User#content</h1>
<p>Find me in app/views/user/content.html.erb</p>
  <tbody>
<% if @news %>
    <% @news.each do |news| %>
      <tr>
        <td><%= news.title %></td>
        <td><%= news.content %></td>
